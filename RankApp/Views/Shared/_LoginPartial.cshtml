@using Microsoft.AspNetCore.Identity
@using RankApp.Models
@using Microsoft.AspNetCore.Authorization;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
                    Привіт
                    @{ var id = UserManager.GetUserId(User); var result = UserManager.Users.SingleOrDefault(user => user.Id == id); string name = result.PIB; }
                    @name
                </a>
            </li>
            <li>
                <span class="glyphicon glyphicon-log-out"></span><button type="submit" class="btn btn-link navbar-btn navbar-link"> Вихід</button>
            </li>
        </ul>
    </form>
}
else
{

    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="RegFromCode"><span class="glyphicon glyphicon-user"></span> Реєстрація</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login"><span class="glyphicon glyphicon-log-in"></span> Вхід</a></li>
    </ul>
}
